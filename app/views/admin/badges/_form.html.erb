<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render  'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name %>
  </p><br>

  <p>
    <%= form.label :rule_id %>:
    <%= form.collection_select :rule_id, Rule.all, :id, :name, prompt: true %>
  </p><br>

    <p>
    <%= form.label :picture %>:
    <%= form.select :picture, Badge::BADGE_PICTURE, prompt: true %>
  </p><br>

  <div>
    <p>
      <%= form.label :option %>: 
      <%= form.text_field :option %>
    </p><br>
  </div>

  <p><%= form.submit %></p>
<% end %>
