<tr>
  <td><%= badge.name %></td>
  <td><%= badge.picture %></td>
  <td><%= badge.rule.name %></td>
  <td class="align-middle"><%= link_to  'show', admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to 'edit', 
                edit_admin_badge_path(badge) %>
  </td>
  <td class="align-middle">
    <%= link_to  'delete', 
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('helpers.flash.confirm') } %>  
  </td>
</tr>